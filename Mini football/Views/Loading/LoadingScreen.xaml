<Window x:Class="Mini_football.Views.Loading.LoadingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mini_football.Views.Loading"
        mc:Ignorable="d"
        Title="LoadingScreen" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        UseLayoutRounding="True"
        
       
        AllowsTransparency="True"
        Background="Black">
    
    <Grid>
        
        <Path Data="M5.96046e-08 145V1.99999H32V60.6H132.8V1.99999H164.8V145H132.8V86.6H32V145H5.96046e-08ZM266.373 146C239.973 146 219.773 139.933 205.773 127.8C191.773 115.533 184.773 97.4 184.773 73.4C184.773 49.5333 191.773 31.4667 205.773 19.2C219.773 6.93333 239.973 0.866663 266.373 0.999994L338.373 1.39999V27H268.573C251.24 27 238.373 30.6667 229.973 38C221.573 45.3333 217.373 57.1333 217.373 73.4C217.373 89.6667 221.573 101.533 229.973 109C238.373 116.333 251.24 120 268.573 120H340.373V146H266.373ZM357.352 145V42H386.352V145H357.352ZM357.152 25V2.39999H386.552V25H357.152Z"
      Height="200"
      Width="400"
      StrokeDashOffset="0"
      StrokeThickness="5"
      Stretch="Fill"
      StrokeStartLineCap="Triangle"
      StrokeEndLineCap="Triangle"
      StrokeDashArray="500"
      x:Name="MyPath"
      Margin="0"
      SnapsToDevicePixels="True">

            <Path.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="B1" Color="White" Offset="0.0"/>
                    <GradientStop x:Name="B2" Color="White" Offset="1.1"/>
                </LinearGradientBrush>
            </Path.Stroke>

            <Path.Fill>
                <LinearGradientBrush x:Name="FillBrush" StartPoint="0,0" EndPoint="0,1">
                    <GradientStop x:Name="FillTop" Color="Black" Offset="0.0"/>
                    <GradientStop x:Name="FillBottom" Color="Black" Offset="1.0"/>
                </LinearGradientBrush>
            </Path.Fill>

            <Path.Triggers>
                <EventTrigger RoutedEvent="Path.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="MyPath"
                                     Storyboard.TargetProperty="StrokeDashOffset"
                                     From="500" To="0"
                                     Duration="0:0:5"
                                     BeginTime="0:0:0"/>

                            <DoubleAnimation Storyboard.TargetName="B1"
                                     Storyboard.TargetProperty="Offset"
                                     From="0.0" To="1.1"
                                     AutoReverse="True"
                                     BeginTime="0:0:0"
                                     Duration="0:0:5"/>

                            <ColorAnimation Storyboard.TargetName="FillTop"
                                    Storyboard.TargetProperty="Color"
                                    To="White"
                                    BeginTime="0:0:5"
                                Duration="0:0:2"/>
                                

                                <ColorAnimation Storyboard.TargetName="FillBottom"
                                    Storyboard.TargetProperty="Color"
                                    To="White"
                                    BeginTime="0:0:5.5" 
                                    Duration="0:0:2"/>
                                   
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Path.Triggers>
        </Path>

        <Grid>
            <TextBlock Margin="408 350 0 0" 
                       Foreground="White"
                       Text=""
                       FontSize="25"
                       FontFamily="Candara Light"
                       x:Name="TxtAnime">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <StringAnimationUsingKeyFrames Storyboard.TargetName="TxtAnime"
                                                               Storyboard.TargetProperty="Text"
                                                               BeginTime="0:0:0:3"
                                                               Duration="0:0:0:2">
                                    <DiscreteStringKeyFrame Value="#" KeyTime="0:0:0.125"/>
                                    <DiscreteStringKeyFrame Value="#P" KeyTime="0:0:0.25"/>
                                    <DiscreteStringKeyFrame Value="#P r"  KeyTime="0:0:0.375"/>
                                    <DiscreteStringKeyFrame Value="#P r o"  KeyTime="0:0:0.5"/>
                                    <DiscreteStringKeyFrame Value="#P r o j "  KeyTime="0:0:0.625"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e"  KeyTime="0:0:0.75"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c"  KeyTime="0:0:0.875"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c t"  KeyTime="0:0:1"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c t  B:"  KeyTime="0:0:1.125"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c t  B:  F"  KeyTime="0:0:1.25"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c t  B:  F u "  KeyTime="0:0:1.375"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c t  B:  F u n "  KeyTime="0:0:1.5"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c t  B:  F u n  a"  KeyTime="0:0:1.625"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c t  B:  F u n  a p"  KeyTime="0:0:1.750"/>
                                    <DiscreteStringKeyFrame Value="#P r o j e c t  B:  F u n  a p p"  KeyTime="0:0:1.875"/>
                                    
                                </StringAnimationUsingKeyFrames >
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>

        </Grid>
    </Grid>
  
</Window>
