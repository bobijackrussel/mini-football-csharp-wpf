<Window x:Class="Mini_football.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Width="800" Height="510"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" Background=" Transparent" AllowsTransparency="True" ResizeMode="NoResize">

    <Grid Margin="20">
        <!-- Glavni okvir sa zaobljenim ivicama i senkom -->
        <Border Background="#222222" CornerRadius="15" Padding="20" BorderBrush="#444" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Dugme za povratak sa strelicom -->
                <Button Content="⬅" Style="{StaticResource MenuButtonStyle}" Width="40" Height="40"
                        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="42,18,0,0" Click="BackButton_Click"/>

                <!-- Player1 sekcija -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
                    <!-- Naslov za Player1 -->
                    <Border  CornerRadius="10" Padding="10" Margin="0,0,0,20">
                        <TextBlock Text="Player 1" FontSize="24" Foreground="White" FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Slika igrača -->
                    <Ellipse Name="player1" Width="120" Height="120" Stroke="Blue" StrokeThickness="5" Margin="0,0,0,20" Canvas.Left="50" Canvas.Top="200">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource=".\img\players\player1.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Grid za kontrole -->
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Kretanje Gore -->
                        <TextBlock Text="Kretanje Gore:" Foreground="White" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                        <Button Content="W" x:Name="Player1_UpButton" Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="0" Grid.Column="1" Margin="10,5"/>

                        <!-- Kretanje Dole -->
                        <TextBlock Text="Kretanje Dole:" Foreground="White" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                        <Button Content="S" x:Name="Player1_DownButton"  Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="1" Grid.Column="1" Margin="10,5"/>

                        <!-- Kretanje Levo -->
                        <TextBlock Text="Kretanje Levo:" Foreground="White" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                        <Button Content="A" x:Name="Player1_LeftButton" Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="2" Grid.Column="1" Margin="10,5"/>

                        <!-- Kretanje Desno -->
                        <TextBlock Text="Kretanje Desno:" Foreground="White" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                        <Button Content="D" x:Name="Player1_RightButton" Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="3" Grid.Column="1" Margin="10,5"/>

                        <!-- Šut -->
                        <TextBlock Text="Šut:" Foreground="White" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                        <Button Content="Space" x:Name="Player1_KickButton" Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click"  Width="130" Height="30" Grid.Row="4" Grid.Column="1" Margin="10,5"/>
                    </Grid>
                </StackPanel>

                <!-- Player2 sekcija -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
                    <!-- Naslov za Player2 -->
                    <Border  CornerRadius="10" Padding="10" Margin="0,0,0,20">
                        <TextBlock Text="Player 2" FontSize="24" Foreground="White" FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Slika igrača -->
                    <Ellipse Name="player2" Width="120" Height="120" Stroke="Red" StrokeThickness="5" Margin="0,0,0,20" Canvas.Left="50" Canvas.Top="200">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource=".\img\players\player2.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Grid za kontrole -->
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="125"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Kretanje Gore -->
                        <TextBlock Text="Kretanje Gore:" Foreground="White" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                        <Button Content="Up Arrow"  x:Name="Player2_UpButton" Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="0" Grid.Column="1" Margin="10,5"/>

                        <!-- Kretanje Dole -->
                        <TextBlock Text="Kretanje Dole:" Foreground="White" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                        <Button Content="Down Arrow" x:Name="Player2_DownButton" Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="1" Grid.Column="1" Margin="10,5"/>

                        <!-- Kretanje Levo -->
                        <TextBlock Text="Kretanje Levo:" Foreground="White" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                        <Button Content="Left Arrow" x:Name="Player2_LeftButton" Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="2" Grid.Column="1" Margin="10,5"/>

                        <!-- Kretanje Desno -->
                        <TextBlock Text="Kretanje Desno:" Foreground="White" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                        <Button Content="Right Arrow" x:Name="Player2_RightButton"  Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="3" Grid.Column="1" Margin="10,5"/>

                        <!-- Šut -->
                        <TextBlock Text="Šut:" Foreground="White" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                        <Button Content="Enter" x:Name="Player2_KickButton"  Style="{StaticResource MenuButtonStyle}"  Click="ControlButton_Click" Width="130" Height="30" Grid.Row="4" Grid.Column="1" Margin="10,5"/>
                    </Grid>
                </StackPanel>

                <!-- Dugme za čuvanje na dnu -->
            </Grid>
        </Border>
    </Grid>
</Window>
