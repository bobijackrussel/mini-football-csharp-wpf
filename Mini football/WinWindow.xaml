<Window x:Class="Mini_football.WinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kraj igre" Height="240" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#444444" CornerRadius="10" Padding="20" BorderBrush="#c41b08" BorderThickness="2">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Prikaz pobedničkog teksta -->
            <TextBlock x:Name="winnerMessage" 
                       Text="PlayerX je pobedio!" 
                       Foreground="White" FontSize="24" 
                       FontWeight="Bold" HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Dugmad za glavni meni i restart igre -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Meni" Style="{StaticResource MenuButtonStyle}" Click="MenuButton_Click" Margin="0,0,10,0"/>
                <Button Style="{StaticResource PlayButtonStyle}" Click="RestartButton_Click" Width="120">
                    <StackPanel Orientation="Horizontal">
                        <Image Source=".\img\else\undo.png"   Width="40" Height="31" Margin="0,0,5,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
