<Window x:Class="Mini_football.ConfirmQuitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Potvrda" Height="230" Width="500" 
        WindowStartupLocation="CenterOwner" 
        WindowStyle="None" 
        Background="Transparent" 
        AllowsTransparency="True">

    <Border Background="#444444" CornerRadius="10" Padding="20" BorderBrush="#c41b08" BorderThickness="2">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Tekst za potvrdu -->
            <TextBlock Text="Da li zaista želite da izađete iz igre?" 
                       Foreground="White" FontSize="18" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Dugmad za potvrdu i odustajanje -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Yes" Style="{StaticResource QuitButtonStyle}" Click="YesButton_Click"/>
                <Button Content="No" Style="{StaticResource  MenuButtonStyle}" Click="NoButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
